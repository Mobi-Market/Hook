{
    "name": "esemve/hook",
    "description": "Simple hook engine for Laravel 5.8 to 8.x",
    "type": "library",
    "keywords": [
        "Hook",
        "Laravel"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Bence Kádár",
            "email": "esemve@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": ">=5.8 <9.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Esemve\\Hook\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Esemve\\Hook\\HookServiceProvider",
                "Esemve\\Hook\\HookDirectivesServiceProvider"
            ],
            "aliases": {
                "Hook": "Esemve\\Hook\\Facades\\HookFacade"
            }
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
